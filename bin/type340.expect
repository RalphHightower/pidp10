#!/usr/bin/expect -f

set timeout 3
set screen_session "pidp10"
spawn screen -x $screen_session
sleep 3
send "\x05"
sleep 2
# a second Ctrl-E for blinkenless Pis, they suffer from script-in-script
send "\x05"
sleep 2
# ----
send "set dpy ena\rco\r"
sleep 2

# leave the screen session
send "\x1D"
expect "Detached"
exit

